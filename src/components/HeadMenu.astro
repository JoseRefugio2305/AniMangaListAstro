---
import HeaderButton from '../components/HeaderButton.astro'
import { Image } from 'astro:assets';
import pageIcon from '../../public/page_icon.png';
---

<header class="py-8 px-4 mx-auto lg:py-16 lg:px-6 justify-items-center grid">
	<div class="mx-auto text-center mb-8 lg:mb-16 justify-items-center grid">
		<h2 class="mb-4 text-5xl tracking-tight font-extrabold text-white">
			AniManga List StaticV

		</h2>
		<Image src={pageIcon} alt="Icono de la Pagina" loading="eager"/>
		<!--<p class="font-light text-gray-500 sm:text-xl dark:text-gray-400">
			Toda la informacion de los lanzamientos de SpaceX
		</p>-->
	</div>
	<div class="rounded-lg bg-gray-800 p-1 sm:w-auto flex flex-col items-center justify-between bg:w-full text-center md:flex-row">
		<HeaderButton p_href="/">
			<svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-news"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M16 6h3a1 1 0 0 1 1 1v11a2 2 0 0 1 -4 0v-13a1 1 0 0 0 -1 -1h-10a1 1 0 0 0 -1 1v12a3 3 0 0 0 3 3h11" /><path d="M8 8l4 0" /><path d="M8 12l4 0" /><path d="M8 16l4 0" /></svg>
			News
		</HeaderButton>
		<HeaderButton p_href="/animes/animes_em/">
			<svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-calendar-clock"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M10.5 21h-4.5a2 2 0 0 1 -2 -2v-12a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v3" /><path d="M16 3v4" /><path d="M8 3v4" /><path d="M4 11h10" /><path d="M18 18m-4 0a4 4 0 1 0 8 0a4 4 0 1 0 -8 0" /><path d="M18 16.5v1.5l.5 .5" /></svg>
	  		Animes En Emision
		</HeaderButton>
		<HeaderButton p_href="/animes/top_animes/">
			<svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-device-tv"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M3 7m0 2a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v9a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2z" /><path d="M16 3l-4 4l-4 -4" /></svg>
			Top 10 Animes
		</HeaderButton>
		<HeaderButton p_href="/mangas/top_mangas/">
			<svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-book"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M3 19a9 9 0 0 1 9 0a9 9 0 0 1 9 0" /><path d="M3 6a9 9 0 0 1 9 0a9 9 0 0 1 9 0" /><path d="M3 6l0 13" /><path d="M12 6l0 13" /><path d="M21 6l0 13" /></svg>
			Top 10 Mangas
		</HeaderButton>
		<HeaderButton p_href="/about">
			<svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-info-circle"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0" /><path d="M12 9h.01" /><path d="M11 12h1v4h1" /></svg>
			About
		</HeaderButton>

	</div>
</header>


<!-- Required JavaScript -->
<script>
  document.addEventListener("DOMContentLoaded", function() {
    const inactiveTabClassName = "bg-transparent";
    const activeTabClassName = "rounded-md bg-white shadow";

    const buttons = document.querySelectorAll('button');

    buttons.forEach((button, index) => {
      button.addEventListener("click", function() {
        // Remove active styles from all buttons
        buttons.forEach((b) => {
          b.classList.remove(...activeTabClassName.split(/\s+/));
          b.classList.add(...inactiveTabClassName.split(/\s+/));
        });

        // Set the selected button as active
        button.classList.add(...activeTabClassName.split(/\s+/));
        button.classList.remove(...inactiveTabClassName.split(/\s+/));
      });
    });
  });
</script>