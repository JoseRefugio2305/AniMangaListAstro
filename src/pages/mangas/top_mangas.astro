---
import Layout from '../../layouts/Layout.astro';
import CardAnime from '../../components/CardAnime.astro';

import {maTop} from '../../services/api.ts';

const mangasT = await maTop(1);
---

<Layout title="Top Mangas" >
	<main id="mangastop">
		<h5 class="mb-2 text-4xl font-bold tracking-tight text-gray-900 dark:text-white"> Top de Mangas </h5>
		<div class="grid md:grid-cols-6 sm:grid-cols-3">

			{
				mangasT.map((mT)=>
					 <CardAnime
					 	titulo={mT.titulo}
					 	sinopsis={mT.sinopsis}
					 	imagen={mT.imagen}
					 	calificacion={mT.calificacion}
					 	linkmal={mT.linkmal}
					 	dia_em=""
					 	is_em={false}
					 />
				)
			}
		</div>
		
	</main>
</Layout>

