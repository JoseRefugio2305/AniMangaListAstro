---
import HeadMenu from '../components/HeadMenu.astro'
import {ViewTransitions, slide} from 'astro:transitions'

interface Props {
	title: string;
}

const { title } = Astro.props;

//
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/page_icon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions/>
	</head>
	<body class="bg-gray-700 justify-items-center">
		
		<main class="m-3">
			<HeadMenu transition:persist/>
			<div  transition:animate={slide({ duration: '0.75s' })}>
				<slot />
			</div>
			
		</main>

	
	</body>
</html>

